<h2>New Task</h2>

<%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details, 'Description' %>
    <%= f.text_area :details %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    <%= f.submit 'Create Task' %>
<% end %>


<%= link_to 'Back to list', index_path %>
