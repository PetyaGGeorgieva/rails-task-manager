<h2>Edit Task</h2>

<%= form_with model: @task do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :details, 'Description' %>
    <%= f.text_area :details %>
  </div>
  <div>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>
  <div>
    <%= f.submit 'Edit Task' %>
  </div>
<% end %>

<%= link_to 'Back to list', index_path %>
