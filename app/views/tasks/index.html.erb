<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
    <%= link_to task.title, task_path(task) %>
    <%= check_box_tag 'task_ids[]', task.id, task.completed, class: 'form-check-input' %>
    <%= link_to "Edit", edit_task_path(task), class: 'btn btn-primary btn-sm' %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path(new_task_url) %>
